<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/item_operations_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:text="300"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size_title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="56dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/item_operations_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jhon"
            android:textColor="@color/gray_main"
            android:textSize="@dimen/text_size_introduce"/>

        <TextView
            android:id="@+id/item_operations_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-12-23 05:23"
            android:textColor="@color/gray_main"
            android:textSize="@dimen/text_size_introduce"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/item_operations_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:src="@drawable/in"/>
</FrameLayout>
